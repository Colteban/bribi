---
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import ThemeToggle from "./ThemeToggle.astro";
---

<header class="site-header">
  <div class="wrap headflex">
    <div class="brand">
      <a class="home" href="/" aria-label={SITE_TITLE}>
        <h1 class="site-title">{SITE_TITLE}</h1>
        <p class="site-tagline">{SITE_DESCRIPTION}</p>
      </a>
    </div>
    <ThemeToggle />
  </div>
</header>

<style>
.site-header { border-bottom: 1px solid var(--border, #eaeaea); background: var(--card, #fff); }
.wrap { max-width: 1100px; margin: 0 auto; padding: 12px 16px; }
.headflex { display: flex; justify-content: space-between; align-items: center; gap: 8px; }
.home { text-decoration: none; color: inherit; display: inline-block; }
.site-title { font-size: 20px; margin: 0; letter-spacing: 0.2px; }
.site-tagline { margin: 2px 0 0; color: var(--muted, #666); font-size: 13px; }
@media (min-width: 768px) {
  .site-title { font-size: 22px; }
  .site-tagline { font-size: 14px; }
}
</style>
