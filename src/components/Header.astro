---
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import ThemeToggle from "./ThemeToggle.astro";


<header class="site-header">
  <div class="wrap headflex">
    <div class="brand">
      <h1 class="site-title"><a href="/">{SITE_TITLE}</a></h1>
      <p class="site-tagline">{SITE_DESCRIPTION}</p>
    </div>
    <ThemeToggle />
  </div>
</header>

<style>
.headflex { display:flex; justify-content:space-between; align-items:center; }
</style>


<style>
.headflex { display:flex; justify-content:space-between; align-items:center; }
.site-header { border-bottom: 1px solid var(--ui-border, #eaeaea); background: #fff; }
.wrap { margin: 0 auto; padding: 12px 16px; max-width: 1100px; }
.site-title { font-size: 20px; line-height: 1.1; margin: 0; letter-spacing: 0.2px; }
.site-title a { text-decoration: none; color: inherit; }
.site-tagline { margin-top: 1px; color: #666; font-size: 12.5px; }
@media (min-width: 768px) {
  .site-title { font-size: 22px; }
  .site-tagline { font-size: 14px; }
}
</style>
