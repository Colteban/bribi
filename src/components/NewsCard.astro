---
export interface Props {
  url: string; title: string; description?: string; pubDate?: Date;
  tags?: string[]; compact?: boolean;
}
const { url, title, description, pubDate, tags = [], compact = false } = Astro.props;
---

<article class={`card ${compact ? "compact": ""}`} data-tags={tags.join(",")}>
  <a class="title" href={url}>{title}</a>
  {description && <p class="desc">{description}</p>}
  <div class="meta">
    {pubDate && <time datetime={pubDate.toISOString()}>{pubDate.toLocaleDateString("es-CO")}</time>}
    <div class="tags">
      {tags.slice(0,3).map((t) => <span class="tag">{t}</span>)}
    </div>
  </div>
</article>

<style>
.card { border:1px solid var(--ui-border,#eee); border-radius:12px; padding:12px; background:#fff; }
.title { display:block; font-weight:700; color:#111; text-decoration:none; line-height:1.2; }
.title:hover { text-decoration:underline; }
.desc { color:#444; margin:6px 0 8px; font-size:14px; }
.meta { display:flex; justify-content:space-between; align-items:center; gap:8px; }
.meta time { color:#666; font-size:12px; }
.tag { display:inline-block; padding:2px 8px; border-radius:999px; background:#f2f2f2; color:#333; font-size:11px; }
.compact .desc { display:none; }
</style>
