---
export interface Props {
  href: string;
  title: string;
  image?: { src: string; alt?: string };
  date?: Date;
}
const { href, title, image, date } = Astro.props;
---
<a href={href} style="display:grid; grid-template-columns:120px 1fr; gap:12px; border:1px solid #eee; border-radius:12px; padding:10px; text-decoration:none; color:inherit;">
  <div style="border-radius:10px; overflow:hidden; background:#f2f2f2;">
    {image?.src ? <img src={image.src} alt={image.alt || title} loading="lazy" style="width:120px; height:80px; object-fit:cover; display:block;" /> : <div style="width:120px; height:80px; background:linear-gradient(135deg,#60a5fa,#1d4ed8);"></div>}
  </div>
  <div>
    <h3 style="margin:.25rem 0; font-size:1rem; line-height:1.25;">{title}</h3>
    {date && <small style="color:#666;">{new Date(date).toLocaleDateString('es-CO')}</small>}
  </div>
</a>
